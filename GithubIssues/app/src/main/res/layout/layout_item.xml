<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/m_5"
    android:background="@drawable/my_custom_background"
    >
    <ImageView
        android:id="@+id/image_user"
        android:layout_width="@dimen/i_100"
        android:layout_height="@dimen/i_100"
        android:layout_margin="@dimen/m_10"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
         />
    <TextView
        android:id="@+id/txt_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_5"
        android:textStyle="bold"
        android:textSize="@dimen/t_14"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/txt_date"
        android:layout_below="@+id/image_user"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:maxLines="1"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user"
        android:layout_marginTop="@dimen/m_10"
        android:textSize="@dimen/t_14"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="@dimen/m_10"
        android:textSize="@dimen/t_14"
        android:ellipsize="end"
        android:maxLength="200"
        />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user"
        android:layout_below="@+id/txt_desc"
        android:layout_marginTop="@dimen/m_10"
        android:textSize="@dimen/t_14"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:gravity="right"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>